<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/dice_2_result"
        android:layout_width="116dp"
        android:layout_height="96dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="72dp"
        android:background="#F44336"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/die_starting_value"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/die_1_label2" />

    <TextView
        android:id="@+id/dice_1_result"
        android:layout_width="116dp"
        android:layout_height="96dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="20dp"
        android:background="#F44336"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/die_starting_value"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/die_1_label" />

    <TextView
        android:id="@+id/die_1_label"
        android:layout_width="116dp"
        android:layout_height="37dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="200dp"
        android:gravity="center"
        android:text="@string/die_1_label_text"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/die_1_label2"
        android:layout_width="116dp"
        android:layout_height="37dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="72dp"
        android:gravity="center"
        android:text="@string/die_2_label_text"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/roll_die_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:background="@color/purple_500"
        android:text="@string/roll_die_button"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="rollDie"/>
</android.support.constraint.ConstraintLayout>